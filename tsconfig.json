{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "esnext",
      "dom"
    ],
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "jsx": "react",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    },
    "rootDir": "./src",
    "outDir": "dist",
    "typeRoots": ["./node_modules/@types", "./typings"]
  },
  "includes": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules"
  ]
}